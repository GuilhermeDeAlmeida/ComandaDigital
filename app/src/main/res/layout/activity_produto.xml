<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="comandadigital.com.br.comandadigital.controller.DetalheProduto">

    <LinearLayout
        android:layout_width="386dp"
        android:layout_height="219dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/produto" />

    <TextView
        android:id="@+id/textViewNomeProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do produto" />

    <TextView
        android:id="@+id/textViewDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descricao" />

    <TextView
        android:id="@+id/textViewDescricaoProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição do produto (valorização e ingredientes)" />

    <TextView
        android:id="@+id/textViewOpcionais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/opcionais" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_weight="1.03"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/opcional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!--Colocar isso em tudo o que for clicável: android:clickable="true" -->
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="153dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Opcional1" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:clickable="true"
                    app:srcCompat="@mipmap/happiness" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/continuarAdicionando"
        android:textAllCaps="false" />

</LinearLayout>