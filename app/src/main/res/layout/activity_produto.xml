    <TextView
        android:id="@+id/textViewDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descricao" />

    <TextView
        android:id="@+id/textViewPreco"
        android:layout_width="match_parent"
